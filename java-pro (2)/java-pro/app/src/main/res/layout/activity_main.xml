<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@color/background_color">

    <EditText
        android:id="@+id/etEmpId"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Employee ID"
        android:layout_marginBottom="12dp"
        android:padding="8dp"
        android:textSize="16sp"
        android:background="@android:drawable/editbox_background"
        android:textColorHint="@color/purple_500"
        android:textColor="@color/purple_500" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_marginBottom="12dp"
        android:padding="8dp"
        android:textSize="16sp"
        android:background="@android:drawable/editbox_background"
        android:textColorHint="@color/purple_500"
        android:textColor="@color/purple_500" />

    <EditText
        android:id="@+id/etDesignation"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Designation"
        android:layout_marginBottom="12dp"
        android:padding="8dp"
        android:textSize="16sp"
        android:background="@android:drawable/editbox_background"
        android:textColorHint="@color/purple_500"
        android:textColor="@color/purple_500" />

    <EditText
        android:id="@+id/etTotalDays"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Total Days"
        android:inputType="number"
        android:layout_marginBottom="12dp"
        android:padding="8dp"
        android:textSize="16sp"
        android:background="@android:drawable/editbox_background"
        android:textColorHint="@color/purple_500"
        android:textColor="@color/purple_500" />

    <EditText
        android:id="@+id/etWorkedDays"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Worked Days"
        android:inputType="number"
        android:layout_marginBottom="12dp"
        android:padding="8dp"
        android:textSize="16sp"
        android:background="@android:drawable/editbox_background"
        android:textColorHint="@color/purple_500"
        android:textColor="@color/purple_500" />

    <EditText
        android:id="@+id/etSalaryPerDay"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Salary Per Day"
        android:inputType="numberDecimal"
        android:layout_marginBottom="12dp"
        android:padding="8dp"
        android:textSize="16sp"
        android:background="@android:drawable/editbox_background"
        android:textColorHint="@color/purple_500"
        android:textColor="@color/purple_500" />

    <EditText
        android:id="@+id/etAllowances"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Allowances"
        android:inputType="numberDecimal"
        android:layout_marginBottom="12dp"
        android:padding="8dp"
        android:textSize="16sp"
        android:background="@android:drawable/editbox_background"
        android:textColorHint="@color/purple_500"
        android:textColor="@color/purple_500" />

    <EditText
        android:id="@+id/etDeductions"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Deductions"
        android:inputType="numberDecimal"
        android:layout_marginBottom="12dp"
        android:padding="8dp"
        android:textSize="16sp"
        android:background="@android:drawable/editbox_background"
        android:textColorHint="@color/purple_500"
        android:textColor="@color/purple_500" />

    <EditText
        android:id="@+id/etNetSalary"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Net Salary"
        android:inputType="numberDecimal"
        android:layout_marginBottom="20dp"
        android:padding="8dp"
        android:textSize="16sp"
        android:background="@android:drawable/editbox_background"
        android:textColorHint="@color/purple_500"
        android:textColor="@color/purple_500"
        android:enabled="false" />

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:padding="12dp"
        android:textSize="16sp"
        android:backgroundTint="@color/purple_500"
        android:textColor="@color/white"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:padding="12dp"
        android:textSize="16sp"
        android:backgroundTint="@color/purple_500"
        android:textColor="@color/white"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:padding="12dp"
        android:textSize="16sp"
        android:backgroundTint="@color/purple_500"
        android:textColor="@color/white" />
</LinearLayout>

</ScrollView>
